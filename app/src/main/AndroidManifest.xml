<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reversecoder.rcprojecttemplate">

    <application
        android:name="com.reversecoder.library.customview.application.CustomViewApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/CustomAppTheme.NoActionBar">
        <activity
            android:name="com.reversecoder.rcprojecttemplate.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.reversecoder.rcprojecttemplate.activity.HomeActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
